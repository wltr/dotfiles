export XILINXD_LICENSE_FILE=2100@10.1.22.252

XILINX_VERSION=2017.2

export XILINX_VIVADO=/opt/Xilinx/Vivado/$XILINX_VERSION
export XILINX_SDK=/opt/Xilinx/SDK/$XILINX_VERSION

alias env_vivado='source $XILINX_VIVADO/settings64.sh'
alias env_xsdk='source $XILINX_SDK/settings64.sh'
alias env_ise='source /opt/Xilinx/14.7/ISE_DS/settings64.sh'


