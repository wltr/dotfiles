export PKG_CONFIG_PATH=$PKG_CONFIG_PATH:$GRBAZPREFIX/lib/pkgconfig
export GRC_BLOCKS_PATH=$GRC_BLOCKS_PATH:$GRBAZPREFIX/share/gnuradio/grc/blocks

