# UHD
UHDPREFIX=~/opt/uhd
export PATH=$PATH:$UHDPREFIX/bin
export LD_LOAD_LIBRARY=$LD_LOAD_LIBRARY:$UHDPREFIX/lib
export LD_LIBRARY_PATH=$LD_LIBRARY_PATH:$UHDPREFIX/lib
export PKG_CONFIG_PATH=$PKG_CONFIG_PATH:$UHDPREFIX/lib/pkgconfig
export CPATH=~/opt/uhd/include

export UHD_LOG_LEVEL=regularly
export UHD_TEMP_PATH=~/tmp
export UHD_IMAGES_DIR=$UHDPREFIX/share/uhd/images

# GNU Radio
GRPREFIX=~/opt/gnuradio
export PATH=$PATH:$GRPREFIX/bin
export LD_LOAD_LIBRARY=$LD_LOAD_LIBRARY:$GRPREFIX/lib
export LD_LIBRARY_PATH=$LD_LIBRARY_PATH:$GRPREFIX/lib
export PYTHONPATH=$PYTHONPATH:$GRPREFIX/lib/python2.7/dist-packages
export PKG_CONFIG_PATH=$PKG_CONFIG_PATH:$GRPREFIX/lib/pkgconfig
export GRC_BLOCKS_PATH=$GRC_BLOCKS_PATH:$GRPREFIX/share/gnuradio/grc/blocks

# GNU Radio gr-baz
GRBAZPREFIX=~/opt/gr-baz
export PATH=$PATH:$GRBAZPREFIX/bin
export LD_LOAD_LIBRARY=$LD_LOAD_LIBRARY:$GRBAZPREFIX/lib
export LD_LIBRARY_PATH=$LD_LIBRARY_PATH:$GRBAZPREFIX/lib
export PYTHONPATH=$PYTHONPATH:$GRBAZPREFIX/lib/python2.7/dist-packages
export PKG_CONFIG_PATH=$PKG_CONFIG_PATH:$GRBAZPREFIX/lib/pkgconfig
export GRC_BLOCKS_PATH=$GRC_BLOCKS_PATH:$GRBAZPREFIX/share/gnuradio/grc/blocks
